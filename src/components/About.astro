<style>
	div {
		color: var(--preto);
		background-color: var(--cinza);
	}

	main {
		padding: 3em auto;
	}

	h2 {
		text-align: center;
		margin: 0 auto;
	}

	p {
		text-align: center;
		margin: 1em auto 0;
	}

	.icons {
		color: var(--branco);
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 1em;
		margin: 0 auto;
	}

	.icons a {
		color: var(--branco);
		text-decoration: none;
        filter: drop-shadow(0px 3px 0px var(--cinza-escuro)) drop-shadow(0px 2px 0px var(--preto));
	}

	.icons a:hover {
		color: var(--cinza-mais-escuro);
	}
	
	a {
		color: var(--branco);
	}

	a:hover {
		color: var(--cinza-mais-escuro);
	}

	.stars {
		display: grid;
		gap: 8px;
		grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
	}
</style>
