---
const urlYouTube = 'https://youtube.com/@RabiscoFalado'
---

<div id="Watch">
	<main>
		<h2>Assista no YouTube!</h2>

		<p>			
			<div class="icons">
				<a href={urlYouTube} target="_blank">
					<span class="sr-only">YouTube</span>
					<svg xmlns="http://www.w3.org/2000/svg" width="200" height="200" viewBox="0 0 24 24">
						<path fill="currentColor" d="M23.498 6.186a3.02 3.02 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.02 3.02 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.02 3.02 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.02 3.02 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814M9.545 15.568V8.432L15.818 12z"/>
					</svg>
				</a>
			</div>
		</p>
	</main>
</div>
<style>
	div {
		color: var(--preto);
		background-color: var(--cinza);
	}

	main {
		padding: 3em auto;
	}

	h2 {
		text-align: center;
		margin: 0 auto;
	}

	p {
		text-align: center;
		margin: 1em auto 0;
	}

	a {
		color: var(--preto);
	}

	a:hover {
		color: var(--cinza);
	}
	
	.icons {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 1em;
		margin: 0 auto;
	}

	.icons a {
		display: contents;
		text-decoration: none;
		color: var(--amarelo);
	}

	.icons a svg {
        filter: drop-shadow(0px 3px 0px var(--cinza-escuro)) drop-shadow(0px 2px 0px var(--preto));
	}

	.icons a:hover {
		color: var(--amarelo-claro);
	}
</style>
