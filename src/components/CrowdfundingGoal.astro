---
const { name, amount, description, isReward } = Astro.props;
---
<h4>{name}</h4>
{isReward && <p><strong>A partir de:</strong></p>}
<h1>R$ {amount},00</h1>
<p>{description}</p>

<p><br/></p>

<style>
    h1 {
		text-align: center;
		color: var(--branco);
		margin: auto;
	}
    
    h4 {
		color: var(--cinza-mais-claro);
	}
   
    p {
		color: var(--cinza-mais-claro);
		text-align: center;
		margin: 1em auto 0;
	}
</style>